footer.main-footer
  include ../popup
  include ./mocky/popup-config
  include ./mocky/mockyData
  section.footer_main-section
    .row.align-middle
      .column.large-3.medium-6.small-12
        .footer_logo
          .img-holder
            img(src="assets/img/Logo_footer.png")
            h1.footer_logo_heading
              | интернет-магазин <br>спортивной&nbsp;экипировки <br>и аксессуаров
      .column.large-9.medium-6.small-12
        .row.footer_mailing-form
          .column.large-expand.small-12
            input(type="text").footer_input
          .column.large-expand.small-12.footer_btn-holder.align-self-stretch.col-collapse.col-collapse--large
            button(type="button").btn.btn--grey
              | Подписаться
      .column.large-2.small-6.medium-3.large-offset-3.footer_links.align-self-top
        //-h3 О магазине
        nav.footer_nav
          ul.ul.ul--untitl
            each art in objOfLinks.about
              li
                a(href="#") #{art}
      .column.large-3.small-6.medium-4.footer_links.align-self-top
        //-h3 Информация
        nav.footer_nav
          ul.ul.ul--untitl
            each info in objOfLinks.info
              li
                a(href="#") #{info}
      .column.large-4.medium-5.footer_links.footer_contacts.align-self-top.col-collapse.col-collapse--large
        h3 Контакты
        .footer_contacts_tel-holder
          img(src="assets/img/footer/mobile_icon.png")
          a(href="tel:0979485039") 097 948 50 39
          a(href="tel:0999238189") 099 923 81 89
        button(type="button").callback-btn.btn.btn--green
          | Обратный звонок
        .flex-holder
          a(href="mailto:zakaz@volleymag.com.ua").footer_email
            img(src="assets/img/footer/email_icon.png")
            | zakaz@volleymag.com.ua

  section.footer_social-section
    .row.align-middle
      .column.xlarge-8.large-7.medium-6.small-12.copyright-block
        h4 volleymag 2012-2017. All rigth recerved.
      .column.medium-6.small-12.soc-block
        h5 Наши сообщества в:
        ul.ul.ul--untitl
          each soc in socialsList
            li
              a(href="#{soc.link}")
                img(src="assets/img/footer/#{soc.icon}.png")

  //- popup block
  .callbackPopupWrapper.hide
    +popup(callEmBack)





