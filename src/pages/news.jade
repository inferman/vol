extends ../layouts/default.jade

block content
  include ../partials/news/mocky/mockyData
  include ../partials/breadcrumbs
  +breadcrumbs('Новости')
  .row
    .column.small-12
      h1.section-title.section-title--blue Новости
  section.row.small-up-1.medium-up-2.large-up-3
    each news in newsData
      .article-container.column.column-block
        article.news_slide.news_flex-article
          .img-holder.text-center
            img(src="assets/img/news/#{news.thumbnail}.jpg").slide-img
            a(href="#").overlay-link
              img(src="assets/img/main-page/eye_icon.png").overlay-link_icon
          .news_content
            p.news_slide_date #{news.date}
            a(href="#").news_slide_link #{news.text}
          .text-right
            a(href="#").cursive-link.cursive-link--blue Читать дальше&nbsp;&nbsp;>